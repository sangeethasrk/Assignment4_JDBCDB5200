@{
    ViewBag.Title = "AdminLogin";
}
@model BloodDonorHub.Models.RequestModel
@using (Html.BeginForm("AdminLogin", "Account", FormMethod.Post))
{
    <header>
        <link rel="stylesheet" type="text/css" href="~/Contents/HomeStyle.css" />
    </header>
    <h2>Admin Area</h2>
    <body>
        <form id="form1">
            @if (TempData["Message"] != null)
            {
                <div>
                    <p typeof="text">Hello <span style="color:red; font-weight: bold;"> @TempData["Message"]</span>!!! Welcome to the the Blood Donors Hub</p>
                </div>
            }

            <div id="footer">
                <p></p>
            </div>
        </form>
    </body>
}